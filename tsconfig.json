{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,      // Skip checking declaration files in node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
